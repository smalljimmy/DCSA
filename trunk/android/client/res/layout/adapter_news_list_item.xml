<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/translucent_white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    
	<LinearLayout android:orientation="vertical"
	    android:layout_weight="1.0"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content">
	    <TextView android:id="@+id/text_title"
	        android:maxLines="1"
	        android:textSize="@dimen/larger_text_size"
	        android:textColor="@android:color/black"
	        android:textStyle="bold"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <TextView android:id="@+id/text_subtitle"
	        android:maxLines="1"
	        android:textColor="@android:color/black"
	        android:textStyle="normal"
	        android:textSize="@dimen/larger_text_size"
	        android:layout_marginTop="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>	   
	    <TextView android:id="@+id/text_time"
	        android:maxLines="1"
	        android:textColor="@android:color/black"
	        android:textStyle="normal"
	        android:textSize="@dimen/larger_text_size"
	        android:layout_marginTop="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>		         
	</LinearLayout>
	
	<ImageView android:id="@+id/image"
	    android:visibility="gone"
	    android:src="@drawable/newscell_button"
	    android:contentDescription="@string/image_content_escription"
	    android:focusable="false"
	    android:scaleType="fitCenter"
	    android:layout_gravity="bottom|right"
	    android:layout_width="25dp"
	    android:layout_height="25dp"/>
</LinearLayout>
