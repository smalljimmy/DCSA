<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:id="@+id/header"
    android:background="@drawable/top_bg1">

    <ImageView
        android:id="@+id/back"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:scaleType="fitCenter"
        android:src="@drawable/left_button"
        android:contentDescription="@string/image_content_escription" />
    <ImageView
        android:id="@+id/legal"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="center"
        android:src="@drawable/top_legal"
        android:contentDescription="@string/image_content_escription" />    

    <LinearLayout android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="44dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:src="@drawable/top_logo"
            android:contentDescription="@string/image_content_escription" />

        <TextView android:id="@+id/top_title_text" 
            android:textColor="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/menu"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="center"
        android:src="@drawable/right_button" 
        android:contentDescription="@string/image_content_escription"/>

</RelativeLayout>